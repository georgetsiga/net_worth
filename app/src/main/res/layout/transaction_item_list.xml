<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wallet_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/wallet_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_miles_d" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gutterSpace"
            android:layout_marginTop="@dimen/gutterSpaceHalf"
            app:layout_constraintStart_toEndOf="@+id/wallet_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Description" />

    <TextView
        android:id="@+id/transaction_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gutterSpace"
        app:layout_constraintStart_toEndOf="@+id/wallet_image"
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        tools:text="Date" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/gutterSpaceHalf"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/description_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="R20 000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginTop="@dimen/gutterSpaceHalf"
        app:layout_constraintTop_toBottomOf="@+id/wallet_image"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
